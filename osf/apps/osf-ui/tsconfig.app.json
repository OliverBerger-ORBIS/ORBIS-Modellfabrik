{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "module": "ES2022",
    "types": []
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/environments/**/*.ts",
    "../../libs/gateway/src/**/*.ts",
    "../../libs/testing-fixtures/src/**/*.ts",
    "../../libs/entities/src/**/*.ts",
    "../../libs/business/src/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "../../libs/gateway/src/__tests__/**/*.ts",
    "../../libs/testing-fixtures/src/__tests__/**/*.ts",
    "../../libs/business/src/__tests__/**/*.ts"
  ],
  "references": [
    {
      "path": "../../libs/gateway/tsconfig.lib.json"
    },
    {
      "path": "../../libs/testing-fixtures/tsconfig.lib.json"
    },
    {
      "path": "../../libs/business/tsconfig.lib.json"
    }
  ]
}
