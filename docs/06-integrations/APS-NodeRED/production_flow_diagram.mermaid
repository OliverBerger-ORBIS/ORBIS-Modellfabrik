graph TD
    subgraph "Production Module Flow"
        START([Order Received])
        IDLE[IDLE State]
        PICK[PICK Operation]
        PROCESS[PROCESS Operation]
        DROP[DROP Operation]
        END([Order Complete])

        START --> IDLE
        IDLE -->|PICK Command| PICK
        PICK -->|PICK Complete| PROCESS
        PROCESS -->|PROCESS Complete| DROP
        DROP -->|DROP Complete| IDLE
        IDLE -->|No More Orders| END
    end

    subgraph "State Details"
        PICKBUSY[PICKBUSY]
        MILLBUSY[MILLBUSY]
        DRILLBUSY[DRILLBUSY]
        DROPBUSY[DROPBUSY]
    end

    PICK -.-> PICKBUSY
    PROCESS -.-> MILLBUSY
    PROCESS -.-> DRILLBUSY
    DROP -.-> DROPBUSY