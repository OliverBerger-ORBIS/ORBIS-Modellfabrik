{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Observation Schema",
  "description": "Schema for validating observation files in registry/observations/",
  "type": "object",
  "required": ["metadata", "observation", "analysis", "proposed_action", "tags", "priority"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["date", "author", "source", "topic", "status"],
      "properties": {
        "date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Date in YYYY-MM-DD format"
        },
        "author": {
          "type": "string",
          "description": "Author of the observation"
        },
        "source": {
          "type": "string",
          "enum": ["analysis", "manual", "system", "user"],
          "description": "Source of the observation"
        },
        "topic": {
          "type": "string",
          "description": "MQTT topic or related topic"
        },
        "related_template": {
          "type": "string",
          "description": "Related template key if applicable"
        },
        "status": {
          "type": "string",
          "enum": ["open", "reviewed", "migrated", "discarded"],
          "description": "Current status in workflow"
        }
      }
    },
    "observation": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": {
          "type": "string",
          "description": "Description of what was observed"
        },
        "payload_example": {
          "description": "Example payload if applicable"
        },
        "context": {
          "type": "string",
          "description": "Additional context information"
        }
      }
    },
    "analysis": {
      "type": "object",
      "required": ["initial_assessment"],
      "properties": {
        "initial_assessment": {
          "type": "string",
          "description": "Initial assessment of the observation"
        },
        "open_questions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Open questions that need to be answered"
        },
        "technical_details": {
          "type": "string",
          "description": "Technical details and findings"
        }
      }
    },
    "proposed_action": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Proposed actions to take"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorization"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Priority level"
    }
  }
}