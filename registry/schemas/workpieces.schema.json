{
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "type":"object",
  "required":["metadata","nfc_codes"],
  "properties":{
    "metadata":{
      "type":"object",
      "required":["version","last_updated","author"],
      "properties":{
        "version":{"type":"string"},
        "description":{"type":"string"},
        "last_updated":{"type":"string","format":"date"},
        "author":{"type":"string"}
      }
    },
    "nfc_codes":{
      "type":"object",
      "patternProperties":{
        "^[0-9a-fA-F]{14}$":{
          "type":"object",
          "required":["friendly_id","color","quality_check","enabled"],
          "properties":{
            "friendly_id":{"type":"string"},
            "color":{"enum":["RED","WHITE","BLUE"]},
            "quality_check":{"enum":["OK","NOT-OK","PENDING","FAILED"]},
            "description":{"type":"string"},
            "enabled":{"type":"boolean"}
          },
          "additionalProperties":false
        }
      },
      "additionalProperties":false
    },
    "quality_check_options":{"type":"array","items":{"type":"string"}},
    "colors":{"type":"array","items":{"type":"string"}},
    "template_placeholders":{"type":"object"},
    "mqtt_paths":{"type":"array","items":{"type":"array","items":{"type":"string"}}}
  },
  "additionalProperties":false
}
