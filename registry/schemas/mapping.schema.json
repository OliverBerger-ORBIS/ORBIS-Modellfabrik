{
    "$schema":"https://json-schema.org/draft/2020-12/schema",
    "type":"object",
    "required":["version","mappings"],
    "properties":{
      "version":{"type":"string"},
      "notes":{"type":["string","null"]},
      "resolution_order":{"type":["array","null"],"items":{"enum":["exact","pattern"]}},
      "defaults":{"type":["object","null"]},
      "catalog":{"type":["object","null"]},
      "mappings":{
        "type":"array",
        "items":{
          "type":"object",
          "oneOf":[
            {"required":["topic","template"]},
            {"required":["pattern","template"]}
          ],
          "properties":{
            "topic":{"type":"string"},
            "pattern":{"type":"string"},
            "template":{"type":"string"},
            "direction":{"enum":["inbound","outbound","bidirectional"]},
            "vars":{"type":["object","null"]},
            "meta":{"type":["object","null"]}
          },
          "additionalProperties":false
        }
      }
    },
    "additionalProperties":false
  }
  