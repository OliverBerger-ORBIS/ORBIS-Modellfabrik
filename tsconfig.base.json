{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@omf3/business": [
        "dist/out-tsc/business/index.d.ts",
        "omf3/libs/business/src/index.ts"
      ],
      "@omf3/entities": [
        "dist/out-tsc/entities/index.d.ts",
        "omf3/libs/entities/src/index.ts"
      ],
      "@omf3/gateway": [
        "dist/out-tsc/gateway/index.d.ts",
        "omf3/libs/gateway/src/index.ts"
      ],
      "@omf3/mqtt-client": [
        "dist/out-tsc/mqtt-client/index.d.ts",
        "omf3/libs/mqtt-client/src/index.ts"
      ],
      "@omf3/testing-fixtures": [
        "dist/out-tsc/testing-fixtures/index.d.ts",
        "omf3/libs/testing-fixtures/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
