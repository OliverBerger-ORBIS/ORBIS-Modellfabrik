{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@omf3/entities": ["omf3/libs/entities/src/index.ts"],
      "@omf3/mqtt-client": ["omf3/libs/mqtt-client/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}

